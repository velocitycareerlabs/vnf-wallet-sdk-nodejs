{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "allowJs": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "": ["./src/"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src"],
}